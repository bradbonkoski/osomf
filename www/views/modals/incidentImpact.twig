<div id="AddImpactModal" class="modal">
    <div class="modal-header">
        <h3>Add Impact for Incident</h3>
        <a href="#" id="AddImactModalClose" class="close">x</a>
    </div>

    <div class="modal-body">
        <div class="clearfix">
            <label>Impact Type</label>
            <div class="input">
                <select class="medium" name="newImpact" id="newImpact">
                    <option value="asset">asset</option>
                    <option value="project">project</option>
                </select>
            </div>
        </div>

        <div class="clearfix">
            <label>Impacted Entity</label>
            <div class="input">
                <input class="medium" id="impactedEntity" type="text"/>

                <input type="hidden" name="entityId" id="entityId" value=""/>
                <div class="ui-widget" style="margin-top:2em; font-family:Arial"></div>
            </div>
        </div>
        
        <div class="clearfix">
            <label>Impact Description</label>
            <div class="input">
                <textarea id="impactDesc"></textarea>
            </div>
        </div>

        <div class="clearfix">
            <label>Impact Severity</label>
            <div class="input">
                <select class="medium" id="impactSev">
                    {% for id, val in sevValues %}
                    <option value="{{ id }}">{{ val }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <a href="#" id="btnImpactAdd" class="btn primary">Add</a>
    </div>
</div>
